---
import { Icon } from "astro-icon";
const { title, data } = Astro.props;
---

<section class="p-6 my-6">
    <div class="relative px-6 pt-8 pb-4 rounded border bg-offset border-default">
        <h3
        class="text-secondary absolute top-0 px-4 py-1 text-xs tracking-tight uppercase -translate-y-1/2 border border-current rounded right-4 bg-default"
      >
        {title}
      </h3>
        <div
        class="container grid grid-cols gap-6 mx-auto sm:grid-cols-2 xl:grid-cols-4"
    >
        {
            data.map(({ title, value, icon }) => (
                <div class="flex p-4 space-x-4 rounded-lg md:space-x-6 bg-default">
                    <div class="flex justify-center p-2 align-middle rounded-lg sm:p-4 bg-offset">
                        <Icon class="h-12 text-primary" name={icon} />
                    </div>
                    <div class="flex flex-col justify-center align-middle">
                        <p class="text-3xl font-semibold leading-none">
                            {value}
                        </p>
                        <p class="capitalize">{title}</p>
                    </div>
                </div>
            ))
        }
    </div>
    </div>
</section>